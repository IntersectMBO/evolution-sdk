{
  "name": "evolution-sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Evolution SDK - A Cardano blockchain development toolkit",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "type-check-recursive": "pnpm --recursive --filter \"./packages/**/*\" exec tsc -b tsconfig.json",
    "lint": "turbo lint",
    "lint-fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx}\"",
    "test": "turbo test",
    "coverage": "turbo test -- --coverage",
    "clean": "turbo clean && rimraf packages/*/dist packages/*/.turbo",
    "docgen": "turbo docgen",
    "docs:dev": "pnpm --filter @evolution-sdk/docs dev",
    "docs:build": "pnpm --filter @evolution-sdk/docs build",
    "docs:start": "pnpm --filter @evolution-sdk/docs start",
    "verify": "turbo verify",
    "circular": "madge --circular --extensions ts packages/*/src/index.ts",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@effect/docgen": "^0.5.2",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "^0.48.0",
    "@effect/vitest": "^0.26.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@turbo/gen": "^2.5.8",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.3",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
